<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="clickListener" type="oscar.com.eater.Presenter.RecipePresenter" />
        <variable name="user" type="oscar.com.eater.Pojo.RecipeWrapper"/>
    </data>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp">
        <android.support.v7.widget.CardView
            android:onClick="@{(view) ->  clickListener.onClick(view, user)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="285dp"
                android:layout_height="275dp"
                android:scaleType="fitXY"
                android:id="@+id/recipe_image"
                custom:imageUrl="@{user.recipe.recipeImage}"
                android:background="@drawable/rounded_top_images"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <oscar.com.eater.Views.QueRicoTextView
                    android:clickable="false"
                    android:id="@+id/recipe_types"
                    android:text="@{user.recipe.source}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <oscar.com.eater.Views.QueRicoTextView
                        android:clickable="false"
                        android:text="@{user.recipe.recipeName}"
                        android:id="@+id/title_text_box"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_weight="3"/>
                    <oscar.com.eater.Views.PrepTimeView
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        custom:textSize="12sp"
                        android:layout_weight="1"
                        android:text='@{user.recipe.totalTime + "mins"}'
                        custom:timerIcon="@drawable/timer"
                        android:id="@+id/prep_time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <oscar.com.eater.Views.QueRicoTextView
                    android:clickable="false"
                    android:text="@{user.recipe.healthLabelString}"
                    android:id="@+id/recipe_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>